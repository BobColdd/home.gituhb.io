import turtle

# Set up the screen
wn = turtle.Screen()
wn.bgcolor("white")

# Create turtle
pen = turtle.Turtle()
pen.color("red")
pen.pensize(3)
pen.speed(3)

# Draw a heart
pen.begin_fill()
pen.left(50)
pen.forward(133)
pen.circle(50, 200)
pen.right(140)
pen.circle(50, 200)
pen.forward(133)
pen.end_fill()

# Write a message
pen.penup()
pen.goto(0, -70)
pen.color("black")
pen.write("I Love You", align="center", font=("Arial", 24, "normal"))
pen.hideturtle()

# Keep the window open
turtle.done()
